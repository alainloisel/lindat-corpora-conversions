NAME "Vystadial 2013 - phone calls speech corpus (English)"
PATH "/opt/projects/lindat-services-kontext/devel/data/corpora/data/speech/Vystadial/2013/Vystadial_2013_en-w"
VERTICAL "/opt/projects/lindat-services-kontext/devel/data/corpora/vert/speech/Vystadial/2013/Vystadial_2013_en-w"
ENCODING utf-8
INFO "Vystadial 2013 is a dataset of telephone conversations in English and Czech, developed for training acoustic models for automatic speech recognition in spoken dialogue systems. The data comprise over 41 hours of speech in English. "
LANGUAGE "English"

DOCSTRUCTURE doc

ATTRIBUTE word {
        TYPE "FD_FGD"
        LOCALE "en_US.UTF-8"
}
ATTRIBUTE lc {
        DYNAMIC utf8lowercase
        DYNLIB internal
        FUNTYPE s
        ARG1 "en_US.UTF-8"
        FROMATTR word
        TYPE index
        TRANSQUERY yes
}
STRUCTURE doc {
	ATTRIBUTE id
    ATTRIBUTE wordcount
}

STRUCTURE sp {
	ATTRIBUTE num
}

STRUCTURE seg {
	ATTRIBUTE soundfile
}

MAXCONTEXT 50
MAXDETAIL 50

