NAME "Facebook Data for Sentiment Analysis"
PATH "/opt/lindat/kontext-data/corpora/data/monolingual/facebook"
VERTICAL "/opt/lindat/kontext-data/corpora/vert/monolingual/facebook/facebook_cs-m"
ENCODING utf-8
INFO "Corpus consisting of 10,000 Facebook posts manually annotated on sentiment (2,587 positive, 5,174 neutral, 1,991 negative and 248 bipolar posts)."
LANGUAGE "Czech"

SHORTREF ""
ATTRIBUTE word {
        TYPE "FD_FGD"
        LOCALE "cs_CZ.UTF-8"
}

ATTRIBUTE polarity {
        TYPE "FD_FGD"
}

STRUCTURE s {
	ATTRIBUTE polarity
}

STRUCTURE doc {
	ATTRIBUTE id
        ATTRIBUTE wordcount
}

MAXCONTEXT 50
MAXDETAIL 50

