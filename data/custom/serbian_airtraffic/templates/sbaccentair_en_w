NAME "English TTS speech corpus of air traffic messages - Serbian accent"
PATH "/opt/lindat/kontext-data/corpora/data/speech/Sbaccentair/Sbaccentair_en-w"
VERTICAL "/opt/lindat/kontext-data/corpora/vert/speech/Sbaccentair/Sbaccentair_en-w"
ENCODING utf-8
INFO "English TTS speech corpus of air traffic (pilot) messages - Serbian accent. The corpus contains recordings of male speaker, native in Serbian, talking in English. The sentences that were read by the speaker originate in the domain of air traffic control (ATC)."
INFOHREF "https://lindat.mff.cuni.cz/repository/xmlui/handle/11234/1-1462"
LANGUAGE "English"

DOCSTRUCTURE doc

ATTRIBUTE word {
        TYPE "FD_FGD"
        LOCALE "en_US.UTF-8"
}
ATTRIBUTE lc {
        DYNAMIC utf8lowercase
        DYNLIB internal
        FUNTYPE s
        ARG1 "en_US.UTF-8"
        FROMATTR word
        TYPE index
        TRANSQUERY yes
}
STRUCTURE doc {
	ATTRIBUTE id
    ATTRIBUTE wordcount
}

STRUCTURE seg {
	ATTRIBUTE soundfile
}

MAXCONTEXT 50
MAXDETAIL 50

