NAME "UMC 0.1 - English-Russian corpus"
PATH "/opt/projects/lindat-services-kontext/devel/data/corpora/data/parallel/UMC/0.1/UMC_0.1_enru_en-m"
VERTICAL "/opt/projects/lindat-services-kontext/devel/data/corpora/vert/parallel/UMC/0.1/UMC_0.1_enru_en-m"
ENCODING utf-8
INFO "UMC 0.1  is a parallel corpus of texts in Czech and Russian downloaded from the single source - The Project Syndicate. It is automatically lemmatized and tagged, so it is searchable for form, lemma and tag."
LANGUAGE "English"

TAGSETDOC "https://www.cs.cmu.edu/~awb/papers/CSL-posbrk/node25.html"
DOCSTRUCTURE doc

ALIGNED "umc_01_enru_ru_m"
ALIGNSTRUCT align

ATTRIBUTE word {
        TYPE "FD_FGD"
        LOCALE "en_US.UTF-8"
}
ATTRIBUTE lemma {
        TYPE "FD_FGD"
        LOCALE "en_US.UTF-8"
}
ATTRIBUTE tag {
        TYPE "FD_FGD"
}
ATTRIBUTE lc {
        DYNAMIC utf8lowercase
        DYNLIB internal
        FUNTYPE s
        ARG1 "en_EN.UTF-8"
        FROMATTR word
        TYPE index
        TRANSQUERY yes
}
ATTRIBUTE pos {
        DYNAMIC getnchar
        DYNLIB  internal
        FUNTYPE i
        ARG1    1
        FROMATTR tag
        TYPE index
}
ATTRIBUTE   k {
	DYNAMIC getnchar
	DYNLIB  internal
	ARG1    1
	FUNTYPE i
	FROMATTR tag
	TYPE 	index
}
ATTRIBUTE   g {
	DYNAMIC getnchar
	DYNLIB  internal
	ARG1    3
	FUNTYPE i
	FROMATTR tag
	TYPE 	index
}
ATTRIBUTE   c {
	DYNAMIC getnchar
	DYNLIB  internal
	ARG1    5
	FUNTYPE i
	FROMATTR tag
	TYPE 	index
}

STRUCTURE doc {
	ATTRIBUTE id
	DISPLAYTAG 0
    ATTRIBUTE wordcount
}

STRUCTURE align {
	ATTRIBUTE id
}

STRUCTURE s {
	ATTRIBUTE id

}

MAXCONTEXT 50
MAXDETAIL 50

