NAME "Summa Theologica"
PATH "/opt/lindat/kontext-data/corpora/data/parallel/Summa/Summa_cs-m"
VERTICAL "/opt/lindat/kontext-data/corpora/vert/parallel/Summa/Summa_cs-m"
ENCODING utf-8
INFO "Latin-Czech-English corpus"
LANGUAGE "Czech"

TAGSETDOC "https://ufal.mff.cuni.cz/pdt/Morphology_and_Tagging/Doc/hmptagqr.html"
WPOSLIST ",podstatné jméno,N.*,přídavné jméno,A.*,zájmeno,P.*,číslovka,C.*,sloveso,V.*,příslovce,D.*,předložka,R.*,spojka,J.*,částice,T.*,citoslovce,I.*,interpunkce,Z.*,neznámý,X.*"
DOCSTRUCTURE doc

ALIGNED "summa_la_m"
ALIGNED "summa_en_m"
ALIGNSTRUCT seg

ATTRIBUTE word {
        TYPE "FD_FGD"
        LOCALE "cs_CS.UTF-8"
}
ATTRIBUTE lemma {
        TYPE "FD_FGD"
        LOCALE "cs_CS.UTF-8"
}
ATTRIBUTE tag {
        TYPE "FD_FGD"
}
ATTRIBUTE lc {
        DYNAMIC utf8lowercase
        DYNLIB internal
        FUNTYPE s
        ARG1 "cs_CS.UTF-8"
        FROMATTR word
        TYPE index
        TRANSQUERY yes
}

STRUCTURE pars {
	ATTRIBUTE id
	DISPLAYTAG 0
	DISPLAYBEGIN "Část %(id)"
        ATTRIBUTE wordcount
}
STRUCTURE seg {
	ATTRIBUTE id
}
STRUCTURE p {
}
STRUCTURE h {
    ATTRIBUTE level {
      NUMERIC y
    }
}
STRUCTURE i {
}
STRUCTURE footnote {
}

MAXCONTEXT 50
MAXDETAIL 50

